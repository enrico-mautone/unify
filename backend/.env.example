# Impostazioni di ambiente per Shoe Production Manager

# Ambiente (development, staging, production)
ENV=development
DEBUG=True

# Configurazione server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Configurazione database
DATABASE_URL=sqlite+aiosqlite:///./shoe_production.db
# Per PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/shoe_production

# Sicurezza
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 giorni

# Utente amministratore predefinito
FIRST_SUPERUSER_EMAIL=super.unify@purpleswan.com
FIRST_SUPERUSER_PASSWORD=password01!
