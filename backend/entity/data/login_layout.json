{
    "layout":{
       "type":"box",
       "props":{
          "minH":"100vh",
          "bg":"gray.50"
       },
       "children":[
          {
             "type":"vstack",
             "props":{
                "spacing":8,
                "mx":"auto",
                "maxW":"lg",
                "py":12,
                "px":6
             },
             "children":[
                {
                   "type":"stack",
                   "props":{
                      "align":"center",
                      "spacing":4
                   },
                   "children":[
                      {
                         "type":"heading",
                         "props":{
                            "size":"2xl"
                         },
                         "content":"Accedi al tuo account"
                      }
                   ]
                },
                {
                   "type":"box",
                   "props":{
                      "rounded":"lg",
                      "bg":"white",
                      "boxShadow":"lg",
                      "p":8,
                      "w":"100%"
                   },
                   "children":[
                      {
                         "type":"vstack",
                         "props":{
                            "spacing":4
                         },
                         "children":[
                            {
                               "type":"formcontrol",
                               "props":{
                                  "id":"email"
                               },
                               "children":[
                                  {
                                     "type":"formlabel",
                                     "content":"Indirizzo email"
                                  },
                                  {
                                     "type":"input",
                                     "props":{
                                        "type":"email",
                                        "placeholder":"Inserisci la tua email",
                                        "required":true
                                     }
                                  }
                               ]
                            },
                            {
                               "type":"formcontrol",
                               "props":{
                                  "id":"password"
                               },
                               "children":[
                                  {
                                     "type":"formlabel",
                                     "content":"Password"
                                  },
                                  {
                                     "type":"inputgroup",
                                     "children":[
                                        {
                                           "type":"input",
                                           "props":{
                                              "type":"password",
                                              "placeholder":"Inserisci la password",
                                              "required":true
                                           }
                                        },
                                        {
                                           "type":"inputrightelement",
                                           "children":[
                                              {
                                                 "type":"button",
                                                 "props":{
                                                    "h":"1.75rem",
                                                    "size":"sm",
                                                    "variant":"ghost"
                                                 },
                                                 "children":[
                                                    {
                                                       "type":"icon",
                                                       "props":{
                                                          "name":"view"
                                                       }
                                                    }
                                                 ]
                                              }
                                           ]
                                        }
                                     ]
                                  },
                                  {
                                     "type":"box",
                                     "props":{
                                        "display":"flex",
                                        "justifyContent":"flex-end",
                                        "mt":2
                                     },
                                     "children":[
                                        {
                                           "type":"link",
                                           "props":{
                                              "color":"blue.500",
                                              "fontSize":"sm"
                                           },
                                           "content":"Password dimenticata?"
                                        }
                                     ]
                                  }
                               ]
                            },
                            {
                               "type":"button",
                               "props":{
                                  "colorScheme":"blue",
                                  "w":"100%",
                                  "mt":4,
                                  "py":6
                               },
                               "content":"Accedi"
                            }
                         ]
                      }
                   ]
                },
                {
                   "type":"hstack",
                   "props":{
                      "spacing":1,
                      "justifyContent":"center"
                   },
                   "children":[
                      {
                         "type":"text",
                         "content":"Non hai un account?"
                      },
                      {
                         "type":"link",
                         "props":{
                            "color":"blue.500"
                         },
                         "content":"Registrati"
                      }
                   ]
                }
             ]
          }
       ]
    }
 }