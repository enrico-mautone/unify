# Environment (development, staging, production)
ENV=production
DEBUG=False

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database configuration
# Example for PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/shoe_production
DATABASE_URL=sqlite+aiosqlite:///./shoe_production.db

# Security
# IMPORTANT: Change this in production!
SECRET_KEY=your-production-secret-key-must-be-very-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 1 day

# Default admin user
# IMPORTANT: Change these in production!
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=ChangeThisPassword123!
